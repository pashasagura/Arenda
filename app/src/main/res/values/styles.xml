<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#c5c5c5</item>
        <item name="colorPrimaryDark">#c5c5c5</item>
        <item name="colorAccent">#c5c5c5</item>
        <item name="actionBarSize">40dp</item>
        <item name="colorControlNormal">#c5c5c5</item>
    </style>

        <style name="MyEditTextTheme">
            <item name="colorControlNormal">#9e9e9e</item>
            <item name="colorControlActivated">#9e9e9e</item>
            <item name="colorControlHighlight">#9e9e9e</item>
            <item name="android:background">#f5f5f5</item>
            <item name="android:textColor">@color/quantum_black_text</item>
            <item name="android:textColorHint">#9f9f9f</item>
            <item name="android:layout_marginStart">8dp</item>
            <item name="android:layout_marginEnd">8dp</item>
            <item name="android:layout_marginBottom">10dp</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:padding">8dp</item>
            <item name="android:textSize">18dp</item>
            <item name="android:hint">Введите адрес</item>

        </style>

    <style name="TextAddHome">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12dp</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_top_side</item>
        <item name="android:windowExitAnimation">@anim/translate_bot_side</item>
    </style>






</resources>
